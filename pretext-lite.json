{
  "variables": {
    "home":    "{{env `HOME`}}",
    "out_dir": "output-box",
    "name":    "pretext-lite",
    "box":     "archlinux",
    "repo":    "archlinux",
    "version": "2018.04.05"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "source_path": "{{user `home`}}/.vagrant.d/boxes/{{user `repo`}}-VAGRANTSLASH-{{user `box`}}/{{user `version`}}/virtualbox/box.ovf",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "90s",
    "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "sh '{{ .Path }}'",
    "inline": [
      "sudo pacman -Syu --noconfirm",
      "sudo pacman -S --noconfirm base-devel libxslt git python imagemagick ghostscript pdf2svg texlive-core texlive-pictures texlive-latexextra texlive-fontsextra",
      "sudo git clone https://github.com/rbeezer/mathbook.git /vagrant/mathbook && sudo chown vagrant:vagrant /vagrant/mathbook",
      "git clone https://github.com/relaxng/jing-trang.git && chown -R vagrant:vagrant jing-trang",
      "sudo pacman -S --noconfirm jdk8-openjdk "
      "sudo dd if=/dev/zero of=/EMPTY bs=1M",
      "sudo rm -f /EMPTY"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "{{user `out_dir`}}/{{user `name`}}-{{user `repo`}}-{{user `box`}}-{{user `version`}}.box"
  }]
}
